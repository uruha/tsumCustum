{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "shared-node-browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-console": [0],
        "indent": [2],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "no-unused-vars": [0, { "vars": "all", "args": "after-used" }]
    }
}
